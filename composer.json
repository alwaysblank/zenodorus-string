{
    "name": "zenodorus/strings",
    "description": "Tools for messing with strings.",
    "repositories": {
        "zenodorus/standards": {
            "type": "vcs",
            "url": "git@github.com:alwaysblank/zenodorus-standards.git"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ben Martinez-Bateman",
            "email": "ben@alwaysblank.org"
        }
    ],
    "require": {
        "php": ">=7"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.1",
        "zenodorus/standards": "dev-master",
        "phpunit/phpunit": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "Zenodorus\\": "src"
        }
    },
    "scripts": {
        "check": ["phpcs --standard=vendor/zenodorus/standards/phpcs.xml src tests"],
        "fix": ["phpcbf --standard=vendor/zenodorus/standards/phpcs.xml src tests"],
        "test": ["phpunit"]
    }
}
